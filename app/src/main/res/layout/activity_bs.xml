<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/percentageEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Try out a chance"/>
    <Button
        android:id="@+id/calcChanceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucky?"/>
    <TextView
        android:id="@+id/outcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Outcome: "/>

    <TextView
        android:id="@+id/phaseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phase ???"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/actionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>

    <TextView
        android:id="@+id/actionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An action has been done!"/>

    <Button
        android:id="@+id/phaseBtn"
        android:text="Next phase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>